<Window
	x:Class="TreeCadN.Prim2" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Примечание"
	Height="400"
	Width="600"
	WindowStartupLocation="Manual"
	Icon="Foto/favicons.png"
	MinWidth="600"
	MinHeight="500" xmlns:treecadn="clr-namespace:TreeCadN"
	Closing="Window_Closing"
	KeyUp="Window_KeyUp">
    <Grid
		Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition
				Height="32"
				MinHeight="32" />
            <RowDefinition
				Name="heightlb"
				Height="*"
				MinHeight="100" />
            <RowDefinition
				Height="5"
				MinHeight="5" />
            <RowDefinition
				Height="Auto"
				MinHeight="70"
				MaxHeight="160" />
            <RowDefinition
				Height="17"
				MinHeight="17" />
            <RowDefinition
				Height="100"
				MinHeight="100" />
            <RowDefinition
				Height="40"
				MinHeight="40" />
        </Grid.RowDefinitions>
        <Grid
			Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
					Width="1*" />
                <ColumnDefinition
					Width="120" />
            </Grid.ColumnDefinitions>
            <TextBox
				Name="tb2"
				Grid.Column="0"
				Margin="5"
				ToolTip="Поиск"
				TabIndex="1"
				VerticalAlignment="Top"
				Height="22"
				TextChanged="tb2_TextChanged" />
            <Button
				Name="b4"
				Grid.Column="1"
				Content="Очистить фильтр"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				Height="22"
				Margin="5"
				Width="110"
				IsTabStop="False"
				Click="b4_Click" />
        </Grid>
        <ListView
			Name="grid"
			Grid.Row="1"
			TabIndex="2"
			Foreground="#FF000000"
			Margin="0,0,0,5"
			Loaded="DataGrid_Loaded"
			KeyUp="grid_KeyUp"
			SizeChanged="grid_SizeChanged"
			GotFocus="grid_GotFocus">
            <ItemsControl.ItemContainerStyle>
                <!--Неизвестный ID соединения: 7-->
                <Style
					TargetType="{x:Type ListViewItem}" />
            </ItemsControl.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn
						x:Name="gr1"
						DisplayMemberBinding="{Binding Name}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader
								Tag="Name"
								Click="lvUsersColumnHeader_Click">Примечание</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn
						Width="70"
						DisplayMemberBinding="{Binding Chasto}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader
								Tag="Chasto"
								Click="lvUsersColumnHeader_Click">Частота использования</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <GridSplitter
			Grid.Row="2"
			Height="2"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Center"
			ShowsPreview="True"
			ResizeDirection="Rows"
			ResizeBehavior="PreviousAndNext" />
        <TextBox
			Name="tb1"
			Grid.Row="3"
			TextWrapping="WrapWithOverflow"
			Margin="5"
			TabIndex="3"
			KeyUp="tb1_KeyUp"
			TextChanged="tb1_TextChanged" />
        <Label
			Margin="5,0,471,0"
			Grid.Row="4"
			Padding="0"
			Height="17"
			Content="Автопримечание" />
        <CheckBox
			Name="cb1"
			Content="Разрешить редактирование"
			HorizontalAlignment="Left"
			Margin="140,0,0,0"
			Grid.Row="4"
			VerticalAlignment="Top"
			Height="17"
			IsTabStop="False"
			Checked="cb1_Checked"
			Unchecked="cb1_Unchecked" />
        <TextBox
			Name="tb3"
			Grid.Row="5"
			TextWrapping="WrapWithOverflow"
			Margin="5,5,514,5"
			TabIndex="3"
			IsTabStop="False"
			Visibility="Collapsed"
			KeyUp="tb1_KeyUp"
			TextChanged="tb3_TextChanged" />
        <ListBox
			Name="lbbutton"
			Grid.Row="5"
			Margin="5"
			ScrollViewer.HorizontalScrollBarVisibility="Disabled"
			SelectionChanged="Lbbutton_SelectionChanged">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border
						CornerRadius="5"
						BorderBrush="#FFAEAEAE"
						BorderThickness="1">
                        <TextBlock
							Padding="5,2"
							ToolTip="При нажатии, автопримечание переместится в место где находится курсор"
							Text="{Binding name}"
							Background="{x:Null}" />
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel
						IsItemsHost="True"
						Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ListBox>
        <Rectangle
			Name="rectang"
			Margin="5"
			Grid.Row="5"
			Fill="#4CCDCDCD" />
        <Label
			Name="lb2"
			Content="233 символа(ов)"
			Margin="0,0,5,5"
			Grid.Row="3"
			HorizontalAlignment="Right"
			VerticalAlignment="Bottom"
			Width="117"
			HorizontalContentAlignment="Right"
			Foreground="#FF8C8C8C" />
        <Grid
			Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
					Width="309*" />
                <ColumnDefinition
					Width="100" />
                <ColumnDefinition
					Width="100" />
            </Grid.ColumnDefinitions>
            <Button
				Content="Отмена"
				Margin="5"
				IsCancel="True"
				Grid.Column="2"
				Height="30"
				IsTabStop="False"
				Click="Button_Click_1" />
            <TextBlock
				TextWrapping="WrapWithOverflow"
				Grid.Column="0"
				FontSize="14"
				Text="Запрещено использовать символы #$@№^|:"
				Margin="5" />
            <Button
				Name="b1"
				Content="Ок"
				Margin="5"
				TabIndex="4"
				Grid.Column="1"
				Height="30"
				IsTabStop="False"
				Click="b1_Click">
                <Control.Background>
                    <LinearGradientBrush
						EndPoint="0,1"
						StartPoint="0,0">
                        <GradientStop
							Color="#FFF3F3F3"
							Offset="0" />
                        <GradientStop
							Color="#FFEBEBEB"
							Offset="0.5" />
                        <GradientStop
							Color="#FFDDDDDD"
							Offset="0.5" />
                        <GradientStop
							Color="#FFCDCDCD"
							Offset="1" />
                    </LinearGradientBrush>
                </Control.Background>
            </Button>
        </Grid>
    </Grid>
</Window>
